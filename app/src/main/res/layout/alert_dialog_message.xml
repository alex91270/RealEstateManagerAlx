<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="We'll get back to you soon..."
        android:textColor="#736685"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <View
        android:id="@+id/detail_divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#f53128" />

    <EditText
        android:id="@+id/dialogEditTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Fill in your name"
        android:textColorHint="@color/colorHint"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/dialogEditTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Your email address"
        android:textColorHint="@color/colorHint"
        android:inputType="textEmailAddress"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/dialogEditTextPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Your phone number"
        android:textColorHint="@color/colorHint"
        android:inputType="phone"
        android:textSize="14sp" />

    <View
        android:id="@+id/detail_divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#f53128" />

    <Button
        android:id="@+id/dialog_button_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="send" />
</LinearLayout>